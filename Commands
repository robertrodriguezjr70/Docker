# Docker container build
  # docker  image build .<directory> -t <image name>:<version>         <-- command to build an image
  # docker image build -f dockerfile.prod . -t <image:version>         <-- running a Dockerfil with a diff name 


# Docker container run
   # docker  container run  -p 8080:80  <image name>:<versin>              <-- command to run the container

# COPY/Add
  #  The differance between copy and add is that add supports supports remote URLs and support TAR files 

  # FROM httpd:2.4
  # COPY . /usr/local/apache2/htdocs/       <-- source and destination
  # CMD echo "httpd 2.4 complete"


# docker container ls                  <-- view running containers
# docker container ps
# docker container run -d -p 8080:80 --name=centos7 <image name>
# docker container stop <container id>
# docker container prune  <-- delete's all stopped containers



# dockerfile contents example
   # FROM <package><version>
   # CMD echo "message"
  
   

# Run vs CMD vs Entrypoint

# RUN - executes when buiilding the image
# CMD and Entrypoint - execute when the container 

FROM alpine
RUN apk add python   < -- adding python to image
CMD ["8.8.8.8"]
ENTRYPOINT ["ping", "-t", "5"]


# Build image from a remote dockerfile
 # docker build https://github.com/madflojo/automatron.git -t automatron:1

